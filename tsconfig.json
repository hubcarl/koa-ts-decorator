{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["reflect-metadata"]
  },
  "exclude": ["node_modules", "build"]
}
